<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">


    <link name="camera">
        <visual>
            <geometry>
                <box size="0.015 0.015 0.015" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <geometry>
                <box size="0.015 0.015 0.015" />
            </geometry>
        </collision>
        <xacro:box_inertia m="0.01" l="0.015" w="0.015" h="0.015"
            xyz="0 0 0" rpy="0 0 0" />

    </link>

    <link name="camera_linse">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 ${pi/2} 0.0" />
            <geometry>
                <cylinder radius="0.005" length="0.02" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 ${pi/2} 0.0" />
            <geometry>
                <cylinder radius="0.005" length="0.02" />
            </geometry>
        </collision>
        <xacro:cylinder_inertia m="0.005" r="0.005" h="0.02"
            xyz="0 0 0" rpy="0 ${pi/2} 0" />

    </link>

    <link name="aster_cam" />

    <joint name="cam_body_joint" type="fixed">
        <parent link="face_link" />
        <child link="camera" />
        <origin xyz="0.035 0.0 0.0" rpy="0.0 0.0 0.0" />
    </joint>

    <joint name="linse_cam" type="fixed">
        <parent link="camera" />
        <child link="camera_linse" />
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
    </joint>

    <joint name="camera_optical_joint" type="fixed">
        <parent link="camera_linse" />
        <child link="aster_cam" />
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
    </joint>


    <gazebo reference="camera">
        <material>Gazebo/Orange</material>

        <sensor name="camera" type="camera">
            <pose> 0 0 0 0 0 0 </pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <camera>
                <horizontal_fov>1.089</horizontal_fov>
                <image>
                    <format>R8G8B8</format>
                    <width>640</width>
                    <height>480</height>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>8.0</far>
                </clip>
            </camera>
            <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
                <frame_name>aster_cam</frame_name>
            </plugin>
        </sensor> 
    </gazebo>

    <gazebo reference="camera_linse">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>